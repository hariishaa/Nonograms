<Application
    x:Class="Nonograms.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Nonograms"
    xmlns:vm="using:Nonograms.ViewModel"
    xmlns:converter="using:Nonograms.View.Converters"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <vm:ViewModelLocator x:Key="ViewModelLocator"/>
            <converter:ItemClickEventArgsConverter x:Key="ItemClickEventArgsConverter"/>
            <ImageBrush x:Key="BackgroundImage" ImageSource="ms-appx:///волна.jpg" Stretch="UniformToFill"/>
            <!--<SolidColorBrush x:Key="BackgroundImage" Color="LightBlue"/>-->
        </ResourceDictionary>
    </Application.Resources>
</Application>

